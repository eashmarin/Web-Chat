<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>app.servlets.RegServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>chat</servlet-name>
        <servlet-class>app.servlets.ChatServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>chat</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>users_online</servlet-name>
        <servlet-class>app.servlets.UsersOnlineServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>users_online</servlet-name>
        <url-pattern>/chat/users_online</url-pattern>
    </servlet-mapping>
</web-app>